<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MagazineEchipamente.AboutPage"
             Title="Pagina cu informatii">
    <ScrollView>
        <VerticalStackLayout>

            <Button
                Text="Our Facebook"
                Clicked="facebook"
                HorizontalOptions="Center"
                Margin="0,100,0,0"
                BackgroundColor="#F2B807"
                WidthRequest="600"/>
            <Button
                Text="Write an email"
                Clicked="email"
                HorizontalOptions="Center"
                WidthRequest="600"
                BackgroundColor="#F25922"
                Margin="0,20,0,0"/>
            <Button
                Text="Lista statiunilor de ski"
                Clicked="ski"
                HorizontalOptions="Center"
                WidthRequest="600"
                BackgroundColor="#0477BF"
                Margin="0,20,0,0"/>
           

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>