<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MagazineEchipamente.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MagazineEchipamente"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent Title="Welcome" 
                      ContentTemplate="{DataTemplate local:MainPage}" />

        <ShellContent Title="Lista Magazinelor"
                      ContentTemplate="{DataTemplate local:ListaMagazinePage}" />
        <ShellContent Title="Informatii utile" 
                      ContentTemplate="{DataTemplate local:AboutPage}" />
    </TabBar>

</Shell>

